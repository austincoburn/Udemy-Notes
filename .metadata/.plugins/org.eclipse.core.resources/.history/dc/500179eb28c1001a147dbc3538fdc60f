package org.revature.animals;

public class Animal {
	private int age;
	private String type;
	private Alive alive;

	public Animal(int age, String type) {
		this.age = age;
		this.type = type;
		alive = new Alive();

	}

	public int getAge() {
		return age;
	}




	public void setAge(int age) {
		this.age = age;
	}




	public String getType() {
		return type;
	}




	public void setType(String type) {
		this.type = type;
	}


	 public Alive getAlive() {
		return alive;
	}


	 class Alive {
		boolean breathe;

		public Alive() {
			breathe = false;
		}

		public boolean isBreathe() {
			return breathe;
		}

		public void setBreathe(boolean breathe) {
			this.breathe = breathe;
		}

		public boolean isAlive() {
			if (isBreathe() == false) {
				System.out.println("this animal is dead!");
				return isBreathe();
			} else {
				System.out.println("This animal is alive!");
				return isBreathe();
			}

		}

	}

}
