package org.revature.animals;

import org.revature.interfaces.Walk;

public class Animal {
	private int age;
	private String type;
	private int legs;
	private Alive alive;
	
	Walk walk = new Walk() {
		
		@Override
		public boolean canWalk() {
			if(getLegs() > 0 ) {
				System.out.println("It can walk yay!!!");
				return true;
			} else {
				return false;
				System.out.println("It cannot walk shoot");
			}
		}
		
	};
	
	
	
	

	public Walk getWalk() {
		return walk;
	}

	public Animal(int age, String type, int legs) {
		this.age = age;
		this.type = type;
		this.legs = legs;
		alive = new Alive();

	}

	public int getAge() {
		return age;
	}




	public void setAge(int age) {
		this.age = age;
	}




	public String getType() {
		return type;
	}




	public void setType(String type) {
		this.type = type;
	}
	
	public int getLegs() {
		return legs;
	}
	
	public void setLegs(int legs) {
		this.legs = legs;
	}


	 public Alive getAlive() {
		return alive;
	}


	 public class Alive {
		boolean breathe;

		public Alive() {
			breathe = false;
		}

		public boolean isBreathe() {
			return breathe;
		}

		public void setBreathe(boolean breathe) {
			this.breathe = breathe;
		}

		public boolean isAlive() {
			if (isBreathe() == false) {
				System.out.println("this animal is dead!");
				System.out.println("Also this animals age was : " + getAge());
				return isBreathe();
			} else {
				System.out.println("This animal is alive!");
				return isBreathe();
			}

		}

	}

}
